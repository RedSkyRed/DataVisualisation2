{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/RedSkyRed/DataVisualisation2/main/data/Top8TeamsPerformance.csv"
    },
    "title": "Top 8 Teams Performance",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 8
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "TeamsTop8",
            "type": "nominal",
            "title": "Teams"
        },
        "y": {
            "field": "Position",
            "type": "nominal",
            "title": "Position"
        },
        "color": {
            "field": "Avg KDA",
            "type": "quantitative",
            "scale": {"scheme":"darkgold"},
            "legend": {
                "title": null
            }
        }
    }
  }